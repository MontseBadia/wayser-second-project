<div class="profile-section">
  <section class="container-head">
        <div class="img-profile">
          {{#if currentUser.imgUrl}}
          <img src="{{currentUser.imgUrl}}" alt="" width="100" height="100">
          {{/if}}
          {{#unless currentUser.imgUrl}}
          <img src="/images/profile-pic.jpg" alt="" width="100" height="100">
          {{/unless}}
        </div>
        <div class= 'user-email-name'>
          <h2>{{currentUser.username}}</h2>
          <p class="profile-email">{{currentUser.email}}</p>
        </div>
  </section>
  <div class="services-section-profile">
    <section class="container">
        <h3>YOUR SERVICES</h3>
        <ul class="service-profile-list">
          {{#each services}}
          <div class="service-container">
            <li>
              <div class="service-name-container">
                <h4>{{this.name}}</h4>
              </div>
              <div class="details-service-container">
                <p>{{this.price.amount}}â‚¬/{{this.price.unit}}</p>
                <p>{{this.category}}</p>
                <p>{{this.description}}</p>
                <div class="edit-container">
                <a href="/profile/edit/{{this._id}}">EDIT</a>
              </div>
            </div>
            </li>
          </div>
          {{/each}}
        </ul>
      <div class="adding-service">
        {{!-- <h3>ADD A SERVICE</h3> --}}
        <div class="add-container">
          <a href="/profile/create-service">ADD SERVICE</a>
        </div>
          {{#unless currentUser.imgUrl}}
          <form action="/profile/upload" method="post" enctype="multipart/form-data">
            <p>Please upload a profile picture:</p>
            <input type="file" name="photo"/>
            <input class="submit" type="submit" value="SAVE"/>
            {{#if messages.length}}
            <ul class="validation">
              {{#each messages}}<li>{{this}}</li>{{/each}}
            </ul>
            {{/if}}
          </form>
          {{/unless}}
      </div>
    </section>
  </div> 
</div>