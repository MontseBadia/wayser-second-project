<section class="service-details">

  <form method="GET" action="/services">
    <div class="search-field" >
      <input class="service-input" type="text" name="terms" placeholder="What service do you need?"/>
      <button class="search-btn" type="submit">Search</button>
    </div>
  </form>

  <div class="container">
      <h1>{{service.name}}</h1>
      <div class="top-part">
        {{#if service.provider.imgUrl}}
        <img src="{{service.provider.imgUrl}}" alt="" width="200" height="200">
        {{/if}}
        {{#unless service.provider.imgUrl}}
        <img src="/images/profile-pic.jpg" alt="" width="200" height="200">
        {{/unless}}
        <div class="contact-btn">
          <h3>{{service.provider.username}}</h3>
          <a href="/services/{{service._id}}/contact">CONTACT</a>
        </div>
      </div>

    <div class="service-details-container">
      <h4><strong>PRICE</strong></h4>
      <p>{{service.price.amount}}â‚¬/{{service.price.unit}}</p>
      <h4><strong>CATEGORY</strong></h4>
      <p>{{service.category}}</p>
      <h4><strong>DESCRIPTION</strong></h4>
      <p>{{service.description}}</p>
      <h4><strong>LOCATION</strong></h4>
      <div id="mapid"></div>
    </div>

  </div>

</section>

