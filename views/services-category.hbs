<section class="services-section">

  <div class= "container">
    <h1>List of Services</h1>
    <div class="filters">
      <h5>Filter by:</h5>
      <label for="">Price</label>
      <input type="checkbox">
    </div>

    <article class="card-container">
      {{#each services}}
      <div class= "card">
        <div class="card-top">
          <div class="card-img"></div>
          <a href="/services/{{this._id}}"><button>Details</button></a>
        </div>
        <h4>{{this.name}}</h4>
        <p>{{this.price.amount}}â‚¬/{{this.price.unit}}</p>
        <p>{{this.provider.username}}</p>
        {{!-- <p>Category: {{this.category}}</p> --}}
      </div>
      {{/each}}
    </article>
  </div>

</section>